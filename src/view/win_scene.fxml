<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.WinController">


    <center>
        <VBox alignment="CENTER" spacing="30"
              style="-fx-background-color: rgba(0,0,0,0.85);">

            <Label text="CONGRATULATIONS!" style="-fx-font-size: 32px; -fx-text-fill: white; -fx-font-weight: bold;"/>

            <Label text="You have solved the puzzle!" style="-fx-font-size: 18px; -fx-text-fill: lightgray;"/>

            <HBox alignment="CENTER" spacing="20">
                <Button text="Play Again" prefWidth="120" prefHeight="40" onAction="#restartGame"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>

                <Button text="Main Menu" prefWidth="120" prefHeight="40" onAction="#goToMenu"
                        style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
