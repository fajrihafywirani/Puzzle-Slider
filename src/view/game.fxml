<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import java.lang.String?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.GameController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding:10;">
            <Button text="â† Back" onAction="#backToMenu"/>
            <Label fx:id="modeLabel" style="-fx-font-size:16px; -fx-text-fill:#3F4F44;"/>
            <Label fx:id="timerLabel" text="Waktu: 00:00" style="-fx-font-size:16px;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">

            <GridPane fx:id="grid"
                      hgap="0"
                      vgap="0"
                      alignment="CENTER"/>

            <VBox alignment="CENTER" spacing="20">

                <ImageView fx:id="previewImage" fitWidth="150.0" fitHeight="150.0" preserveRatio="true">
                    <styleClass>
                        <String fx:value="preview-box" />
                    </styleClass>
                </ImageView>
            </VBox>

        </VBox>
    </center>

</BorderPane>