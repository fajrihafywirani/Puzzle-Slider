            </padding>

            <Label text="PILIH UKURAN PUZZLE" styleClass="title" />

            <Label text="Semakin besar ukuran, semakin sulit tantangannya!"
                   style="-fx-font-size: 16px; -fx-text-fill: #bdc3c7;" />

            <VBox alignment="CENTER" spacing="15.0" maxWidth="300.0">
                <Button onAction="#select3x3" prefWidth="200"
                        text="Mudah (3x3)"/>

                <Button onAction="#select4x4" prefWidth="200"
                        text="Normal (4x4)"/>

                <Button onAction="#select5x5" prefWidth="200"
                        text="Sulit (5x5)"/>
            </VBox>

